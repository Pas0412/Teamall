/* balance-management.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.balance-card {
  background-color: #4A90E2;
  color: white;
  padding: 60rpx 40rpx;
  border-radius: 16rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.balance-title {
  font-size: 32rpx;
  display: block;
  margin-bottom: 20rpx;
}

.balance-amount {
  font-size: 64rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 30rpx;
}

.balance-update-time {
  font-size: 24rpx;
  opacity: 0.8;
}

.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  border-radius: 80rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: white;
}

.recharge {
  background-color: #ff6347;
}

.transfer {
  background-color: #2ecc71;
}

.withdraw {
  background-color: #f39c12;
}

.history-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  display: block;
}

.transaction-history {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-info {
  display: flex;
  flex-direction: column;
}

.transaction-type {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.transaction-date {
  font-size: 24rpx;
  color: #888;
}

.transaction-amount {
  font-size: 28rpx;
  font-weight: bold;
}

.income {
  color: #2ecc71;
}

.expense {
  color: #e74c3c;
}

.bottom-actions {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
}

.btn {
  flex: 1;
  margin: 0 20rpx;
  border-radius: 80rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
  background-color: transparent;
}