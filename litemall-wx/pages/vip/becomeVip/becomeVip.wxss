/* pages/vip/becomeVip/becomeVip.wxss */
.container {
  padding: 40rpx;
  background-color: #f9f9f9;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 50rpx;
}

.section {
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.benefit-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.benefit-item {
  font-size: 28rpx;
  color: #555;
}

.price-section {
  display: flex;
  justify-content: center;
  align-items: baseline;
  margin-bottom: 60rpx;
}

.price-label {
  font-size: 28rpx;
  color: #333;
}

.price {
  font-size: 40rpx;
  color: #e60012;
  margin-left: 10rpx;
}

.pay-button {
  background-color: #e60012;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 40rpx;
}