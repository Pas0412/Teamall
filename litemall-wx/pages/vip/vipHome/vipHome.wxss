/* pages/vip/vipHome/vipHome.wxss */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
}

.card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.status {
  font-size: 34rpx;
  font-weight: bold;
  color: #e60012;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.expire {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.renew-button {
  background-color: #e60012;
  color: white;
  font-size: 30rpx;
  padding: 18rpx 0;
  border-radius: 40rpx;
}