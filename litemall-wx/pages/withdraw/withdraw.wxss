/* withdraw.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.balance-info {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.balance-label {
  color: #666;
  font-size: 28rpx;
}

.balance-amount {
  color: #333;
  font-size: 56rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.withdraw-form {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  width: 200rpx;
  color: #666;
  font-size: 28rpx;
}

.item-value {
  flex: 1;
  text-align: right;
  color: #333;
  font-size: 28rpx;
}

.amount-highlight {
  color: #f56c6c;
  font-weight: bold;
}

.input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.currency-sign {
  color: #333;
  font-size: 32rpx;
  margin-right: 10rpx;
}

.amount-input {
  flex: 1;
  color: #333;
  font-size: 32rpx;
  height: 60rpx;
}

.all-in-btn {
  color: #409eff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #409eff;
  border-radius: 8rpx;
}

.fee-info, .actual-amount {
  padding: 25rpx 0;
}

.tips {
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.submit-area {
  padding: 40rpx 20rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #409eff;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
}

.tips-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.tips-content {
  background-color: #fff;
  padding: 40rpx 60rpx;
  border-radius: 12rpx;
  max-width: 70%;
  position: relative;
}

.tips-content text {
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}    